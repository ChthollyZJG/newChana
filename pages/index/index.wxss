.map {
    width: 100%;
    height: 100%;
}

.contanir {
    margin: 40rpx 13rpx 0 13rpx;
    height: 200rpx;
    position: relative;
    display: flex;
}
.content {
    position: absolute;
    left: 0rpx;
    top: 0;
    height: 100%;
    transition: all .5s;
}
.headers.header_box {
    flex: 1;
}
.headers {
    width: 138rpx;
    height: 200rpx;
    background-color: rgba(255, 255, 255, .3);
    display: inline-block;
    position: relative;
}
.mine {
    margin-right: 34rpx;
}

.headers_bg {
    width: 112rpx;
    height: 112rpx;
    position: absolute;
    top: 26rpx;
    left: 13rpx;
    
}

.toleft {
    position: absolute;
    height: 100%;
    width: 50rpx;
    background-color: skyblue;
    left: 0;
}
.toright {
    position: absolute;
    height: 100%;
    width: 50rpx;
    background-color: skyblue;
    right: 0;
}

.name {
    position: absolute;
    bottom: 26rpx;
    font-size: 22rpx;
    line-height: 22rpx;
    width: 100%;
    text-align: center;
}