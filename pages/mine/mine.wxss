view {
    color: #3c3c3c;
    box-sizing: border-box;
}
.tophead {
    padding: 128rpx 0 0 30rpx; 
}
.headerview {
    width: 196rpx;
    height: 196rpx;
    border-radius: 50%;
    background-color: #e9e9e9;
    position: relative;
}
.header {
    width: 180rpx;
    height: 180rpx;
    border-radius: 50%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    display: block;
}
.name {
    font-size: 40rpx;
    margin-top: 42rpx;
    line-height: 40rpx;
}

/* middle */
.middle {
    margin: 32rpx 0 54rpx 0;
    font-size: 28rpx;
    line-height: 28rpx;
    display: flex;
    padding-left: 30rpx;
}
.chanaID {
    margin-right: 90rpx;
}
.lines {
    width: 1px;
    height: 28rpx;
    background-color: #3c3c3c;
    margin: 0 20rpx;
}

/* chanas */
.chanas {
    border: 1px solid #d0d0d0;
    border-width: 1px 0 1px 0;
    padding: 22rpx 18rpx 0 18rpx;
    width: 750rpx;
    height: 180rpx;
    box-sizing: border-box;
    white-space:nowrap;
}
.master {
    width: 130rpx;
    height: 130rpx;
    position: relative;
    display: inline-block;
    margin-right: 16rpx;
}
.master_bg {
    width: 130rpx;
    height: 130rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.chana_add {
    width: 40rpx;
    height: 40rpx;
    position: absolute;
    bottom: 0;
    right: 0;
    z-index: 3;
}
.chana_pic {
    width: 118rpx;
    height: 118rpx;
    border-radius: 50%;
    position: absolute;
    top: 8rpx;
    left: 8rpx;
    z-index: 2;
    display: inline-block;

}

.actions {
    border-bottom: 1px solid #d0d0d0;
    font-size: 32rpx;
    padding: 0 30rpx;
    line-height: 88rpx;
    height: 88rpx;
}

/* 非组件标签 */
.updateinfo {
    font-size: 30rpx;
    width: 250rpx;
    height: 76rpx;
    border-radius: 10rpx;
    position: absolute;
    top: 188rpx;
    right: 154rpx;
    background-color: #fff;
    box-sizing: border-box;
    border: 1px solid #3c3c3c;
}
.updateinfo::after {
    border: none;
}
.next {
    width: 30rpx;
    height: 30rpx;
}